    | r w. |
    | r w. |
    | r w. |
    | r w. |

    // === VARIATION I: The Viola's lament ===
    // A simple melody, a fifth above the bass at first
    | E3 w. p |
    | D3 w. |
    | C3 w. |
    | B2 w. |

    // === VARIATION II ===
    // Now the viola has a more independent line
    | E3 h F3 h E3 h mp |
    | D3 h E3 h D3 h |
    | C3 h D3 h C3 h |
    | B2 w. |

    // === VARIATION III ===
    // Eighth-note motion, inner voice activity
    | C3 q D3 q E3 q F3 q E3 q D3 q |
    | B2 q C3 q D3 q E3 q D3 q C3 q |
    | A2 q B2 q C3 q D3 q C3 q B2 q |
    | G#2 w. |

    // === VARIATION IV ===
    // Syncopated, restless
    | r q E3 h E3 h r q mf |
    | r q D3 h D3 h r q |
    | r q C3 h C3 h r q |
    | B2 w. |

    // === VARIATION V: The Storm ===
    // Driving repeated notes
    | E3 q E3 q E3 q E3 q E3 q E3 q f |
    | D3 q D3 q D3 q D3 q D3 q D3 q |
    | C3 q C3 q C3 q C3 q C3 q C3 q |
    | B2 h. B2 h. ff |

    // === VARIATION VI ===
    // Sustained, sorrowful
    | C3 w. pp |
    | B2 w. |
    | A2 w. |
    | G#2 w. |

    // === VARIATION VII ===
    // Ornamental counterpoint
    | C3 h D3 q C3 q B2 h p |
    | B2 h C3 q B2 q A2 h |
    | A2 h B2 q A2 q G#2 h |
    | G#2 w. |

    // === VARIATION VIII - CODA ===
    | C3 w. pp |
    | B2 w. |
    | A2 w. |
    | G#2 w. |
    | C3 w. ppp |
    | B2 w. |
    | A2 w. |
    | G#2 w. |
}

